/* theme color */
$accentColor ?= #3eaf7c;
/* text color */
$textColor ?= #2c3e50;
$darkTextColor ?= #9e9e9e;
/* background-color */
$bgColor ?= #fff;
$darkBgColor ?= #1d2025;
$bgColorLight ?= #fff;
$darkBgColorLight ?= #252934;
$bgColorActive ?= #f8f8f8;
$darkBgColorActive ?= #252934;
$bgColorBack ?= #f8f8f8;
$darkBgColorBack ?= #1d2025;
$bgColorFloat ?= #fff;
$darkBgColorFloat ?= #252934;
$bgColorBlur ?= rgba(255, 255, 255, 0.9);
$darkBgColorBlur ?= rgba(29, 32, 37, 0.9);
$bgColorFloatBlur ?= rgba(255, 255, 255, 0.9);
$darkBgColorFloatBlur ?= rgba(37, 41, 52, 0.9);
$borderColor ?= #eaecef;
$darkBorderColor ?= #302d28;
$codeBgColor ?= #ecf4fa;
$darkCodeBgColor ?= #282c34;
$arrowBgColor ?= #ccc;
$darkArrowBgColor ?= #333;
/* colors provided by theme */
$boxShadowColor ?= #f0f1f2;
$darkBoxShadowColor ?= #282a32;
$cardShadowColor ?= rgba(0, 0, 0, 0.15);
$darkCardShadowColor ?= rgba(0, 0, 0, 0.3);
/* layout */
$navbarHeight ?= 3.75rem;
$navbarHorizontalPadding ?= 1.5rem;
$navbarVerticalPadding ?= 0.7rem;
$navbarMobileHeight ?= 3.25rem;
$navbarMobileHorizontalPadding ?= 1rem;
$navbarMobileVerticalPadding ?= 0.5rem;
// sidebar
$sidebarWidth ?= 18rem;
$sidebarMobileWidth ?= 16rem;
// content
$contentWidth ?= 740px;
$homePageWidth ?= 1160px;
/* responsive breakpoints */
$MQWide ?= 1440px; // wide screen
$MQNormal ?= 1280px; // desktop
$MQNarrow ?= 959px; // narrow desktop / iPad
$MQMobile ?= 719px; // wide mobile
$MQMobileNarrow ?= 419px; // narrow mobile
/* font */
$fontFamily ?= -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', STHeiti, 'Microsoft YaHei', SimSun, sans-serif;
$fancyFontFamily ?= Georgia Pro, Crimson, Georgia, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Fira Sans', 'Droid Sans', 'Helvetica Neue', STHeiti, 'Microsoft YaHei', SimSun, sans-serif;
// code
$codeFontFamily ?= Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
$colorTransition ?= 0.3s ease;
$transformTransition ?= 0.3s ease;
/* code block */
$lineNumbersWidth ?= 2.5rem;
$codeLang ?= js ts html md vue css sass scss less stylus go java c sh yaml py docker dockerfile makefile;
/* content class */
$contentClass ?= '.theme-default-content';
/* theme-color */
$colorPicker ?= {
  red: #e74c3c,
  blue: #3498db,
  green: #3eaf7c,
  orange: #f39c12,
  purple: #8e44ad
};
